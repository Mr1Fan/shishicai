<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ball_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ssc2018.dqb.view.BallTextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:padding="6dp"
            android:text="0"
            android:textSize="14sp"
            app:BallType="1"
            android:layout_marginRight="10dp"
            />


        <com.ssc2018.dqb.view.BallTextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="1"
            android:textSize="14sp"
            app:BallType="1"
            app:checked="false"
            android:layout_marginRight="10dp"
            />

        <com.ssc2018.dqb.view.BallTextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="2"
            android:textSize="14sp"
            app:BallType="1"
            app:checked="false"
            android:layout_marginRight="10dp"
            />

        <com.ssc2018.dqb.view.BallTextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="3"
            android:textSize="14sp"
            app:BallType="1"
            app:checked="false"
            android:layout_marginRight="10dp"
            />

        <com.ssc2018.dqb.view.BallTextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="4"
            android:textSize="14sp"
            app:BallType="1"
            app:checked="false"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ball_ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <com.ssc2018.dqb.view.BallTextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="5"
            android:textSize="14sp"
            app:BallType="1"
            app:checked="false" />

        <com.ssc2018.dqb.view.BallTextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="6"
            android:textSize="14sp"
            app:BallType="1"
            app:checked="false" />


        <com.ssc2018.dqb.view.BallTextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="7"
            android:textSize="14sp"
            app:BallType="1"
            app:checked="false" />

        <com.ssc2018.dqb.view.BallTextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="8"
            android:textSize="14sp"
            app:BallType="1"
            app:checked="false" />

        <com.ssc2018.dqb.view.BallTextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="9"
            android:textSize="14sp"
            app:BallType="1"
            app:checked="false" />
    </LinearLayout>
</LinearLayout>
