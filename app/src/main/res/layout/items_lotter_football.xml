<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:line="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lot_ite_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/black_999"
            android:layout_centerVertical="true"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/flag_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:paddingBottom="7dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/item_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主队"
                android:textColor="@color/black_666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_bf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:textColor="@color/black_666"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/item_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客队"
                android:textColor="@color/black_666"
                android:layout_marginLeft="10dp"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

    <!-- 类型 -->
    <LinearLayout
        android:id="@+id/lot_foot_lin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray_e1"
        android:clickable="true">

        <com.ssc2018.dqb.Draw.TableTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="胜平负"
            android:textColor="@color/black_999"
            android:textSize="14sp"
            line:checked="false"
            line:left_line="2"
            line:right_line="2"
            line:up_line="2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.ssc2018.dqb.Draw.TableTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical|right"
                android:text="让球"
                android:textColor="@color/black_999"
                android:textSize="14sp"
                line:checked="false"
                line:up_line="2" />

            <com.ssc2018.dqb.Draw.TableTextView
                android:id="@+id/ite_rq_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingTop="0dp"
                android:text="(+1)"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                line:checked="false"
                line:right_line="2"
                line:up_line="2" />

        </LinearLayout>


        <com.ssc2018.dqb.Draw.TableTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="比分"
            android:textColor="@color/black_999"
            android:textSize="14sp"
            line:right_line="2"
            line:up_line="2" />

        <com.ssc2018.dqb.Draw.TableTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="总进球"
            android:textColor="@color/black_999"
            android:textSize="14sp"
            line:right_line="2"
            line:up_line="2" />

        <com.ssc2018.dqb.Draw.TableTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="半全场"
            android:textColor="@color/black_999"
            android:textSize="14sp"
            line:right_line="2"
            line:up_line="2" />
    </LinearLayout>

    <!-- 比分 -->
    <LinearLayout
        android:id="@+id/item_lot_footlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <com.ssc2018.dqb.Draw.TableTextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/black_666"
            android:textSize="14sp"
            line:down_line="2"
            line:left_line="2"
            line:up_line="2" />


        <com.ssc2018.dqb.Draw.TableTextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/black_666"
            android:textSize="14sp"
            line:down_line="2"
            line:left_line="2"
            line:up_line="2" />

        <com.ssc2018.dqb.Draw.TableTextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/black_666"
            android:textSize="14sp"
            line:down_line="2"
            line:left_line="2"
            line:up_line="2" />

        <com.ssc2018.dqb.Draw.TableTextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/black_666"
            android:textSize="14sp"
            line:down_line="2"
            line:left_line="2"
            line:up_line="2" />

        <com.ssc2018.dqb.Draw.TableTextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/black_666"
            android:textSize="14sp"
            line:down_line="2"
            line:left_line="2"
            line:right_line="2"
            line:up_line="2" />

    </LinearLayout>

    <View
        android:id="@+id/gray_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray_cc" />


</LinearLayout>
