<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/mini_btn_clicked"
    android:id="@+id/item_Bg"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/jc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="竞彩足球"
                    android:textSize="15dip"
                    android:textColor="@color/black_666"
                    />

                <TextView
                    android:id="@+id/jc_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-6-30"
                    android:textSize="15dip"
                    android:textColor="@color/black_666"
                    android:layout_marginLeft="25dp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lotter_rebg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lotter_foot_bg"
                android:layout_marginTop="8dp"
                >
                <ImageView
                    android:id="@+id/lotter_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/result_footicon"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:id="@+id/item_bf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="黄色力量 1:1 胜负"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_to"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/lotter_lineTv"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_cc"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />
</LinearLayout>
